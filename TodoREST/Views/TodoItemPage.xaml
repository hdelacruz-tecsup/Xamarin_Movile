<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
			 x:Class="TodoREST.TodoItemPage" 
			 Title="Todo">
	<StackLayout Margin="20">
        <Label Text="Nombre y Apellido" />
        <Entry Text="{Binding Path=nombreApp}" 
               Placeholder="Hugo Jhordan" />
        <Label Text="Nombre y Apellido" />
        <Entry Text="{Binding Path=apellido}" 
               Placeholder="De La Cruz Orellana" />
		<Label Text="Sexo" />
        <Entry Text="{Binding Path=sexo}"
               Placeholder="Masculino/Femenino" />
		<Label Text="Fecha de nacimiento" />
        <Entry Text="{Binding Path=edad}"
               Placeholder="2002-05-02" />
        <Button Text="Save" 
                Clicked="OnSaveButtonClicked" />
		<Button Text="Delete"
                Clicked="OnDeleteButtonClicked" />
		<Button Text="Cancel" 
                Clicked="OnCancelButtonClicked" />
	</StackLayout>
</ContentPage>
